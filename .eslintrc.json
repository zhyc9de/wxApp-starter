{
    "extends": "airbnb-base",
    "env": {
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-console": "off",
        "space-before-function-paren": "off",
        "prefer-destructuring": "off",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "warn"
    },
    "globals": {
        "__DEV__": true,
        "App": true,
        "Page": true,
        "Component": true,
        "wx": true,
        "getApp": true,
        "getCurrentPages": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.babel.js"
            }
        }
    }
}
